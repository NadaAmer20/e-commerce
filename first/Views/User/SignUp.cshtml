@model User;
@{
    Layout = "~/Views/shared/_lay.cshtml";
}
<section class="login">
    <div class="login-box">
        <h2>Singup</h2>
        <form asp-action="SaveNewUser" asp-controller="User">

            <div class="user-box">

                <input asp-for="FirstName" required>
                <label asp-for="FirstName"></label>
            </div>
            <div class="user-box">
                <input asp-for="LastName" required>
                <label asp-for="LastName"></label>
            </div>
          <div class="user-box">
                <input asp-for="UserName" required>
                <label asp-for="UserName"></label>
            </div>
        
            <div class="user-box">
                <input asp-for="Phone" required>
                <label asp-for="Phone"></label>
            </div>
             <div class="user-box">
                <input asp-for="Address" required>
                <label asp-for="Address"></label>
            </div>
           
            <div class="user-box">
                <input asp-for="Email" required>
                <label asp-for="Email"></label>
            </div>
            
            <div class="user-box">
                <input asp-for="Password" required>
                <label asp-for="Password"></label>
            </div>
            <div class="user-box">
                <input asp-for="ConfirmPassword" required>
                <label asp-for="ConfirmPassword"></label>
            </div>
            <button type="submit">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Singup
            </button>

        </form>
        <p>You have an account? <a href="login.html">Login</a></p>
    </div>
</section>
























