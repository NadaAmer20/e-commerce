@model User;
@{
    Layout = "~/Views/shared/_lay.cshtml";
}

    <section class="login">
        <div class="login-box">
            <h2>Login</h2>
        <form asp-action="ConfirmUser" asp-controller="User" id="signin-form">

                <div class="user-box">
		
				<input asp-for="Email" required />
				<label asp-for="Email"></label>
                </div>
                <div class="user-box">
                 
                    <input asp-for="Password" required>
					<label asp-for="Password"></label>
				</div>
                <button type="submit">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    Login
                </button>
            </form>
        <p>Don't have an account? <a asp-action="SignUp" asp-controller="User"> Sign Up</a>

        </div>
    </section>


