@model List<Review>

<h1>Reviews</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Rating</th>
            <th>Comment</th>
            <th>Review Date</th>
            <th>User Id</th>
            <th>Product Id</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.Id</td>
                <td>@review.Rating</td>
                <td>@review.Comment</td>
                <td>@review.ReviewDate</td>
                <td>@review.UserId</td>
                <td>@review.ProductId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@review.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@review.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@review.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create">Create New Review</a>
</p>